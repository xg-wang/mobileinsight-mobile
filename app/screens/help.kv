<HelpScreen>:
    name: 'help'
    ScrollView:
        do_scroll_x: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(250)
            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "\n\n\n\n"
                halign: 'center'
            MDLabel:
                padding_y: dp(20)
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: ""
                halign: 'center'
            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: root.about_text
                halign: 'left'
                markup: True
                on_ref_press:
                    import webbrowser
                    webbrowser.open('http://mobileinsight.net/tutorials.html')

